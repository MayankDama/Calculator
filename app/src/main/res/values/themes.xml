<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Customize your text here -->
    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:gravity">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display2</item>
    </style>

    <!-- Customize your text here -->
    <style name="ActionButtonStyle">
        <item name="android:background">@drawable/shape_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="android:textColor">@color/actionTheme</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Customize your text here -->
    <style name="NumberButtonStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:background">@drawable/shape_background</item>
        <item name="android:textColor">@color/numberTheme</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Number2ButtonStyle">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:elevation">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:background">@drawable/shape_background</item>
        <item name="android:textColor">@color/numberTheme</item>
        <item name="android:gravity">center</item>
    </style>

</resources>